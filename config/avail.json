{
  "avail": {
    "network": "testnet",
    "nexus": {
      "enabled": true,
      "rpcUrl": "https://nexus-rpc.avail.tools",
      "apiKey": "YOUR_AVAIL_API_KEY",
      "chainId": 202402021700,
      "name": "Avail Nexus Testnet"
    },
    "intent": {
      "processing": {
        "enabled": true,
        "sequential": true,
        "timeout": 300000,
        "retryAttempts": 3,
        "retryDelay": 5000
      },
      "bridge": {
        "enabled": true,
        "executePattern": true,
        "settlementVerification": true,
        "crossChainSupport": true
      }
    },
    "supportedChains": [
      {
        "chainId": 1,
        "name": "Ethereum",
        "network": "sepolia",
        "supported": true
      },
      {
        "chainId": 137,
        "name": "Polygon",
        "network": "mumbai", 
        "supported": true
      },
      {
        "chainId": 97,
        "name": "BSC",
        "network": "bscTestnet",
        "supported": true
      },
      {
        "chainId": 421614,
        "name": "Arbitrum",
        "network": "arbitrumSepolia",
        "supported": true
      },
      {
        "chainId": 11155420,
        "name": "Optimism",
        "network": "optimismSepolia",
        "supported": true
      }
    ]
  },
  "nexus": {
    "configuration": {
      "intentQueue": {
        "maxSize": 1000,
        "processingInterval": 10000,
        "timeout": 300000
      },
      "settlement": {
        "verificationRequired": true,
        "timeout": 60000,
        "retryAttempts": 3
      },
      "monitoring": {
        "enabled": true,
        "interval": 30000,
        "alerts": true
      }
    },
    "endpoints": {
      "createIntent": "/api/v1/intent/create",
      "processIntent": "/api/v1/intent/process",
      "getIntentStatus": "/api/v1/intent/status",
      "verifySettlement": "/api/v1/settlement/verify"
    }
  },
  "integration": {
    "depositManager": {
      "address": "0x0000000000000000000000000000000000000000",
      "chainContracts": {
        "1": "0x0000000000000000000000000000000000000000",
        "137": "0x0000000000000000000000000000000000000000",
        "97": "0x0000000000000000000000000000000000000000",
        "421614": "0x0000000000000000000000000000000000000000",
        "11155420": "0x0000000000000000000000000000000000000000"
      }
    },
    "priceOracle": {
      "address": "0x0000000000000000000000000000000000000000",
      "btcPoolAddress": "0x0000000000000000000000000000000000000000"
    }
  },
  "workflow": {
    "steps": [
      {
        "step": 1,
        "name": "User Deposit",
        "description": "User deposits tokens on source chain",
        "contract": "ChainDepositContract",
        "action": "deposit"
      },
      {
        "step": 2,
        "name": "Intent Creation",
        "description": "Create cross-chain intent via Avail Nexus",
        "service": "NexusIntentService",
        "action": "createIntent"
      },
      {
        "step": 3,
        "name": "Sequential Processing",
        "description": "Process intents in sequential order",
        "service": "NexusIntentService",
        "action": "processIntents"
      },
      {
        "step": 4,
        "name": "Settlement Verification",
        "description": "Verify settlement on destination chain",
        "service": "NexusIntentService",
        "action": "verifySettlement"
      },
      {
        "step": 5,
        "name": "Activation Processing",
        "description": "Process activation in DepositManager",
        "contract": "DepositManager",
        "action": "processNextActivation"
      },
      {
        "step": 6,
        "name": "Price Update",
        "description": "Update XMBL token price",
        "contract": "PriceOracle",
        "action": "activateToken"
      }
    ]
  }
}
